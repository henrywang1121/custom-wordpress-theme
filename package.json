{
  "name": "customtheme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "scss:main": "sass scss/style.scss customtheme/style.css",
    "autoprefixer:main": "postcss -u autoprefixer -r customtheme/style.css",
    "cssmin:main": "cleancss -o customtheme/style.css customtheme/style.css",
    "terser:main": "terser js/custom-main.js --compress --mangle --output customtheme/js/custom-main.min.js",
    "terser:home": "terser js/custom-home.js --compress --mangle --output customtheme/js/custom-home.min.js",
    "terser:forms": "terser js/custom-forms.js --compress --mangle --output customtheme/js/custom-forms.min.js",
    "terser:vlp": "terser js/custom-vlp.js --compress --mangle --output customtheme/js/custom-vlp.min.js",
    "terser:vdp": "terser js/custom-vdp.js --compress --mangle --output customtheme/js/custom-vdp.min.js",
    "terser:research": "terser js/custom-research.js --compress --mangle --output customtheme/js/custom-research.min.js",
    "terser:specials": "terser js/custom-specials.js --compress --mangle --output customtheme/js/custom-specials.min.js",
    "terser:videos": "terser js/custom-videos.js --compress --mangle --output customtheme/js/custom-videos.min.js",
    "terser:recaptcha": "terser js/custom-recaptcha.js --compress --mangle --output customtheme/js/custom-recaptcha.min.js",
    "imageclean": "rimraf customtheme/images/**/*.{png,jpg,gif,svg,webp,avif}",
    "imagemin": "imagemin --out-dir=customtheme/images images/**/*.{png,jpg,jpeg,gif,svg}",
    "webp:jpg": "for file in images/*.jpg; do ./node_modules/.bin/cwebp -q 65 $file -o customtheme/$file.webp -short; done;",
    "webp:png": "for file in images/*.png; do ./node_modules/.bin/cwebp -q 65 $file -o customtheme/$file.webp -short; done;",
    "avif": "avif --input='images/*.{jpg,jpeg,png,gif}' --output='customtheme/images' --overwrite --quality=40 --verbose=true",
    "build:css": "npm-run-all scss:main autoprefixer:main cssmin:main",
    "build:js": "npm-run-all --parallel terser:main terser:home terser:forms terser:vlp terser:vdp terser:research terser:specials terser:videos terser:recaptcha",
    "build:img": "npm-run-all imageclean imagemin webp:jpg webp:png avif",
    "build": "npm-run-all --parallel build:css build:js build:img",
    "serve": "browser-sync start --files './customtheme/**/*' --proxy 'https://customtheme.local'",
    "watch:img": "onchange --await-write-finish 1500 'images/**/*.{png,jpg,gif,svg}' -- npm run build:img",
    "watch:css": "onchange 'scss/**/*.scss' -- npm run build:css",
    "watch:js": "onchange 'js/**/*.js' -- npm run build:js",
    "dev": "npm-run-all --parallel serve watch:css watch:js watch:img"
  },
  "repository": {
    "type": "git",
    "url": "git+https://tylercombscustom@bitbucket.org/customadvertising/customtheme-theme.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/customadvertising/customtheme-theme#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "avif": "^0.3.1",
    "browser-sync": "^2.26.7",
    "clean-css-cli": "^5.6.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.3.0",
    "imagemin-cli": "^7.0.0",
    "imagemin-webp": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.0.0",
    "rimraf": "^3.0.0",
    "sass": "^1.32.8",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-scss": "^4.1.0",
    "terser": "^5.9.0"
  }
}
